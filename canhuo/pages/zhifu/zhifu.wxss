@import "../youhuijuan/youhuijuan.wxss";
page{
  background:#eeeeee;
}
.zhifu-title{
  height:140rpx;
  line-height:140rpx;
  background:#f3f3f3;
  text-align: center;
  font-size:34rpx;
  margin:20rpx 40rpx;
}
.zhufu-nr{
  background:white;
  margin:0 40rpx;
  padding:10rpx 60rpx 0;
}
.nr-title{
  font-size:32rpx;
  color:#666;
  height:100rpx;
  line-height:100rpx;
}
.zhufu-nr .money{
  font-size:70rpx;
  border-bottom:1px solid #efefef;
  padding-bottom:20rpx;
}
.zhufu-nr .money text{
  font-size:100rpx;
}
.mony{
  height:100rpx;
  line-height:100rpx;
  background:#08bf62;
  color:white;
  text-align: center;
  border-radius:10rpx;
}
.zhufu-nr{
  padding-bottom:100rpx;
}
.tanchuang{
  width:100%;
  z-index:100;
  height:100%;
  position: fixed;
  left:0;
  top:0;
  background:rgba(0,0,0,0.5);
}
.tanchuang1{
  width:90%;
  background:white;
  margin:0 auto;
  position: relative;
  top:10%;
  height:80%;
  padding-top:50rpx;
  overflow-y:scroll;
}
.youhuijuan1 .right .zuo{
  width:100%;
}
.cha{
  width:40rpx;
  height:40rpx;
  position: absolute;
  right:20rpx;
  top:20rpx;
}
.money input,.in{
  color:black;
  height:100rpx;
  line-height:100rpx;
  font-size:70rpx;
}