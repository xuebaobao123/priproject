@import "../youhuijuan/youhuijuan.wxss";
page{
  background:#eeeeee;
}
.zhifu-title{
  height:140rpx;
  line-height:140rpx;
  background:white;
  text-align: center;
  font-size:34rpx;
  margin:20rpx 0;
}
.zhufu-nr{
  background:white;
  padding:10rpx 0 0 0;
}
.nr-title{
  font-size:32rpx;
  color:#666;

}
.zhufu-nr .money{
  font-size:70rpx;
  border-bottom:1px solid #efefef;
  padding-bottom:20rpx;
  margin-bottom:20rpx;
}
.zhufu-nr .money text{
  font-size:100rpx;
}
.mony{
  height:100rpx;
  line-height:100rpx;
  background:#dd7432;
  color:white;
  text-align: center;
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
}
.tanchuang{
  width:100%;
  z-index:100;
  height:100%;
  position: fixed;
  left:0;
  top:0;
  background:rgba(0,0,0,0.5);
}
.tanchuang1{
  width:90%;
  background:white;
  margin:0 auto;
  position: relative;
  top:10%;
  height:80%;
  padding-top:50rpx;
  overflow-y:scroll;
}
.youhuijuan1 .right .zuo{
  width:100%;
}
.youhuijuan1 .right .zuo view:nth-child(2){
  margin:40rpx 0;
}
.cha{
  width:40rpx;
  height:40rpx;
  position: absolute;
  right:20rpx;
  top:20rpx;
}
.money input,.in{
  color:black;
  height:100rpx;
  line-height:100rpx;
  font-size:70rpx;
  text-align: center;
}
.guanbi{
  background:#de7534;
  color:white;
  width:200rpx;
  font-size:30rpx;
  height:50rpx;
  line-height:50rpx;
  text-align: center;
  border-radius: 10rpx;
}
.enable{
  background:gray !important;
  color:white !important;
}
.nr-title{
  overflow: hidden;
}
.nr-title .left{
  float:left;
}
.nr-title .right{
  float:right;
}
.nr-title{
  border-bottom:1rpx solid #efefef;
    padding:30rpx 60rpx;
}