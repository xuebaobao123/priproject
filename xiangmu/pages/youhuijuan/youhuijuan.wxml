<view class="youhuijuan">
   <view class="youhuijuan1" wx:for="{{couponArray}}">
      <view class="top">
         <view class="left">
            <image src="{{item.imgUrl}}" class="img1"></image>
            <view class="dingwei">
               <view class="dingwei1">
                  <image src="../images/youhuijuan1.png"></image>
                  <text class="{{item.couponType==COUPONTYPE.DISCOUNT?'':'active'}}">{{item.couponType==COUPONTYPE.DISCOUNT?item.needIntegral+'积分':'团'}}</text>
               </view>
            </view>
         </view>
         <view class="right">
            <view class="zuo">
               <view>{{item.integralName}}</view>
               <view>{{item.content}}</view>
               <view bindtap="onToggle" data-index="{{index}}">查看详情 ></view>
            </view>
            <view class="you">
               <view wx:if="{{item.couponType==COUPONTYPE.DISCOUNT}}">
                  
                    <image src="../images/zhuanzeng.png"></image>
                    <view>X{{item.number}}</view>
                    <view bindtap="{{item.accessType.targetEvent}}">{{item.accessType.content}} ></view>
                </view>
               
               <view wx:if="{{item.couponType==COUPONTYPE.GROUP}}" bindtap="{{item.accessType.targetEvent}}" style="padding-top:186rpx;">{{item.accessType.content}} ></view>
            </view>
         </view>
         <view class="clearfloat"></view>
      </view>
      <view class="pic {{activeIndex == index ? '' : 'hidden'}}">
         <view>
            <text>优惠说明：</text>
            <text>{{item.integralExplain}}</text>
         </view>
         <view>
            <text>可用时段：</text>
            <text style="text-indent:0rpx;">{{item.validityDate.desc}}</text>
         </view>
         <view>
            <text>使用须知：</text>
            <text>{{item.useRequire}}</text>
         </view>
      </view>
   </view>
</view>
<view class="fixed">
   <view>
      可用积分
      <text>{{usableIntegral}}</text>
   </view>
   <view bindtap="goMyMember">我的会员 ></view>
</view>